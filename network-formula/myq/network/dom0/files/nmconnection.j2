{%- set wifi = pillar['network']['wifi'][ssid] -%}
[connection]
id={{ ssid }}
uuid={{ ssid | uuid }}
type=wifi
interface-name={{ wifi.ifname }}
permissions=user:user:;

[wifi]
mac-address-blacklist=
mode=infrastructure
ssid={{ ssid }}

[wifi-security]
auth-alg=open
key-mgmt=wpa-psk
psk={{ wifi.secret }}

[ipv4]
dns-search=
method=auto

[ipv6]
addr-gen-mode=stable-privacy
dns-search=
method=auto

[proxy]
